<%= form_with(model: product, remote: true, class: 'mb-4') do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: 'form-label text-primary s1 ' %>
    <%= form.text_field :name, class: 'form-control bg-light text-dark', placeholder: 'Enter name' %>
  </div>

  <div class="mb-3">
    <%= form.submit "submit", class: 'btn btn-primary' %>
  </div>
<% end %>

<style>
.s1 {
  padding: 15px;
}
</style>
